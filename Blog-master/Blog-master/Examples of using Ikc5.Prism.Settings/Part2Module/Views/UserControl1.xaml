<UserControl x:Class="Part2Module.Views.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Part2Module"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Background="Transparent">
        <TextBlock
            Text="{Binding Path=Name, Mode=OneWay, FallbackValue=Part2}"
            Width="{Binding Path=Width, Mode=OneWay}"
            Height="{Binding Path=Height, Mode=OneWay}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            TextAlignment="Center">
            <TextBlock.Background>
                <SolidColorBrush Color="{Binding Path=BackgroundColor, Mode=OneWay, FallbackValue=#FF00BFFF}"/>
            </TextBlock.Background>
        </TextBlock>
    </Grid>
</UserControl>
